<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:mapbox="http://schemas.android.com/apk/res-auto"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="org.janastu.heritageapp.testresttemplate.app.DetailedImageActivity">




    <LinearLayout
            android:id="@+id/buttonPanelLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"
    >
        <Button
                android:id="@+id/btnCapturePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Image "
        />
        <EditText
                android:id="@+id/editTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp"
                android:hint="ID"
                android:textColorHint="#bbbbbb"
        />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/buttonPanelLayout"
            android:padding="10dp"
    >



    <TextView
            android:id="@+id/textviewTitle"
            android:layout_below="@+id/showImg"
            android:text="Location of the captured location"
            android:textColor="#000000"
            android:textSize="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"

    />
        <TextView
            android:id="@+id/textviewDesc"
            android:layout_below="@+id/showImg"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"

    />

        <TextView
                android:id="@+id/textviewLatLong"
                android:layout_below="@+id/showImg"
                android:text="Location of the captured location"
                android:textColor="#000000"
                android:textSize="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"

        />
        <TextView
                android:id="@+id/textviewCategory"
                android:layout_below="@+id/showImg"
                android:text="Location of the captured location"
                android:textColor="#000000"
                android:textSize="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"

        />

        <TextView
                android:id="@+id/textviewLanguage"
                android:layout_below="@+id/showImg"
                android:text="Location of the captured location"
                android:textColor="#000000"
                android:textSize="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"

        />

        <ImageView
                android:id="@+id/showImg"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"


        />


    </LinearLayout>

</RelativeLayout>
